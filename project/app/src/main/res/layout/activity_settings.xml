<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brightBackgroundColor"
    android:padding="16dp">

    <TextView
        android:id="@+id/settings_activity_language_text"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/settings_language"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/settings_activity_language"
        style="@style/TextView.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_activity_language_text"
        android:layout_marginTop="5dp"
        android:textSize="18sp" />

    <View
        android:id="@+id/settings_activity_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/settings_activity_language"
        android:layout_marginTop="5dp"
        android:background="@color/textOnPrimary" />

    <RelativeLayout
        android:id="@+id/settings_activity_relative_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/settings_activity_view">

        <TextView
            android:id="@+id/settings_activity_receive_notification_text"
            style="@style/TextView.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_receive_notification"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/settings_activity_checkBox_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/settings_activity_receive_notification_text"
            android:layout_alignParentEnd="true"
            android:checked="true" />

    </RelativeLayout>

    <View
        android:id="@+id/settings_activity_view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/settings_activity_relative_layout1"
        android:layout_marginTop="10dp"
        android:background="@color/textOnPrimary" />

    <RelativeLayout
        android:id="@+id/settings_activity_relative_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/settings_activity_view2">

        <TextView
            android:id="@+id/settings_activity_receive_email_notifications_text"
            style="@style/TextView.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/settings_receive_email_notifications"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/settings_activity_checkBox_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/settings_activity_receive_email_notifications_text"
            android:layout_alignParentEnd="true"
            android:checked="true" />

    </RelativeLayout>

    <View
        android:id="@+id/settings_activity_view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/settings_activity_relative_layout2"
        android:layout_marginBottom="5dp"
        android:background="@color/textOnPrimary" />

    <Button
        android:id="@+id/settings_activity_button_password"
        style="@style/TextView.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_activity_view3"
        android:layout_marginTop="0dp"
        android:background="@color/colorSecondaryLight"
        android:gravity="start|center"
        android:textSize="20sp"
        android:clickable="true"
        android:text="@string/change_password"
        android:focusable="true" />

    <View
        android:id="@+id/settings_activity_view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/settings_activity_button_password"
        android:background="@color/textOnPrimary" />

    <Button
        android:id="@+id/settings_activity_button_log_out"
        style="@style/TextView.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_activity_view4"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorSecondaryLight"
        android:gravity="start|center"
        android:textSize="20sp"
        android:clickable="true"
        android:text="@string/log_out"
        android:focusable="true" />

    <View
        android:id="@+id/settings_activity_view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/settings_activity_button_log_out"
        android:background="@color/textOnPrimary" />

</RelativeLayout>