<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardView11"
    android:layout_width="match_parent"
    android:layout_height="132dp"
    android:layout_marginStart="6dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="6dp"
    card:cardElevation="3dp"
    android:background="@color/color_cardView_background"
    android:clickable="true"
    card:cardCornerRadius="20dp"
    card:cardUseCompatPadding="false"
    card:contentPadding="2dp"
    card:layout_constraintEnd_toEndOf="parent"
    card:layout_constraintStart_toStartOf="parent"
    card:layout_constraintTop_toTopOf="parent"
    tools:ignore="MissingConstraints"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:focusable="true">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card:layout_constraintBottom_toBottomOf="parent"
            card:layout_constraintEnd_toEndOf="parent"
            card:layout_constraintHorizontal_bias="0.0"
            card:layout_constraintStart_toStartOf="parent"
            card:layout_constraintTop_toTopOf="parent"
            card:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="2dp"
                android:text="text"
                android:textColor="@color/textOnPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                card:layout_constraintBottom_toBottomOf="parent"
                card:layout_constraintEnd_toEndOf="parent"
                card:layout_constraintStart_toStartOf="parent"
                card:layout_constraintTop_toBottomOf="@+id/subject1" />

            <TextView
                android:id="@+id/subject1"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:text="subject"
                android:textColor="@color/textOnPrimary"
                android:textSize="15sp"
                android:textStyle="italic"
                card:layout_constraintStart_toStartOf="@+id/resume_author"
                card:layout_constraintTop_toBottomOf="@+id/resume_author" />

            <TextView
                android:id="@+id/dateStart"
                android:layout_width="82dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="date"
                android:textColor="@color/textOnPrimary"
                android:textSize="14sp"
                card:layout_constraintBottom_toTopOf="@+id/text"
                card:layout_constraintEnd_toEndOf="parent"
                card:layout_constraintHorizontal_bias="0.923"
                card:layout_constraintStart_toEndOf="@+id/resume_author"
                card:layout_constraintTop_toTopOf="parent"
                card:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/resume_author"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:layout_marginTop="4dp"
                android:text="author"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="16sp"
                card:layout_constraintStart_toStartOf="parent"
                card:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile1_user"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:src="@mipmap/ic_launcher"
                card:layout_constraintBottom_toBottomOf="parent"
                card:layout_constraintEnd_toEndOf="parent"
                card:layout_constraintHorizontal_bias="0.0"
                card:layout_constraintStart_toStartOf="parent"
                card:layout_constraintTop_toTopOf="parent"
                card:layout_constraintVertical_bias="0.0" />
        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>
