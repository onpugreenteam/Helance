<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_material_light"
    tools:context=".activity.lobby.forAuthorizedUsers.navigationFragment.profileNavFragment.myResumeFragment.resume.MyResumeViewActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/activity_my_resume_view_linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_my_resume_view_subject"
                style="@style/TextView.Primary"
                android:layout_marginTop="0dp"
                android:text="@string/subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/activity_my_resume_view_opportunities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/opportunities"
                android:textSize="18sp"
                android:textColor="@color/darkText"
                tools:layout_editor_absoluteX="3dp" />

            <View
                android:id="@+id/activity_my_resume_view_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_Black"
                tools:layout_editor_absoluteX="22dp" />

            <LinearLayout
                android:id="@+id/activity_my_resume_view_linear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                tools:ignore="MissingConstraints">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/activity_my_resume_view_avatar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_launcher"
                    tools:ignore="MissingConstraints" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activity_my_resume_view_user_name"
                        style="@style/TextView.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text="@string/name"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/activity_my_resume_view_user_email"
                        style="@style/TextView.Primary"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/email"
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="92dp" />

                    <TextView
                        android:id="@+id/activity_my_resume_view_user_country"
                        style="@style/TextView.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/country"
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="88dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</android.support.constraint.ConstraintLayout>